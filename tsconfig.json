{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "noEmit": true,
        "target": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": ".", // required
        "paths": {
            "@/*": [
                "src/*"
            ] // alias definition
        }
    },
    "include": [
        "src/**/*"
    ], // not just utils â€” include Vue files
    "exclude": [
        "node_modules",
        "dist",
        "docs"
    ]
}
